<h1><%= t "charts.listing" %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Composer</th>
      <th>Description</th>
      <th>Price</th>
      <th>Discontinue</th>
      <th>Level</th>
      <th>Genre</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @charts.each do |chart| %>
      <tr>
        <td><h4><%= chart.title %></h4></td>
        <td><%= chart.composer %></td>
        <td><%= chart.description %></td>
        <td> $<%= chart.price %></td>
        <td><%= chart.discontinue %></td>
        <td><%= chart.level %></td>
        <td><%= chart.genre %></td>
        <td><%= link_to 'Show', chart %></td>
        <td><%= link_to 'Edit', edit_chart_path(chart) %></td>
        <td><%= link_to 'Destroy', chart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chart', new_chart_path %>
